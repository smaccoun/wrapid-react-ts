{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6",
        "removeComments": true,
        "preserveConstEnums": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "built",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "forkChecker": true,
        "useCache": true
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [
        "node_modules",
        "built",
        "built-components",
        "built-production"
    ]
}
